<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd
                           http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />

    <screen id="shopScreen" controller="com.mygame.ShopScreenController">
        <layer id="background" backgroundColor="#0000" childLayout="center">
            <panel id="panel" width="80%" height="80%" align="center" valign="center" backgroundColor="#f00f" childLayout="vertical">
                <control name="tabGroup" id="shopTabs">
                    <control name="tab" id="tabWeapons" caption="Tienda">
                        <panel id="weaponsPanel" width="100%" height="100%" childLayout="vertical">
                            <control name="button" id="buyWeapon1" label="Rifle SemiAutomatico 30 (presiona X)" align="center" wrap="true" onClick="buyWeapon1()"/>

                            <control name="button" id="buyWeapon2" label="Sniper 65 (Preciona F)" align="center" wrap="true" 
                                     onClick="buyWeapon2()"/>
                            
                            <control name="button" id="buyUpgrade1" label="Bonificacion de daño (20 porciento de daño, hasta 5 veces) 20 (Presiona Z)" align="center" wrap="true" 
                                     onClick="buyUpgrade1()"/>
                            <control name="button" id="buyUpgrade2" label="Vida extra para la torre (250 extra) 100 (presiona V)" align="center" wrap="true"
                                     onClick="buyUpgrade2()"/>
                        </panel>
                    </control>
                </control>
            </panel>
        </layer>
    </screen>
</nifty>
